# AI4Org Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================
# Security Configuration
# ===========================
# Admin PIN for accessing admin dashboard (CHANGE THIS!)
ADMIN_PIN=9999

# ===========================
# Model Configuration
# ===========================
# Generator model (TinyLlama or other HuggingFace model)
GEN_MODEL=TinyLlama/TinyLlama-1.1B-Chat-v1.0

# Discriminator model
DISC_MODEL=distilbert-base-uncased

# Sentence transformer for embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ===========================
# Device Configuration
# ===========================
# Device to use: cuda, cpu, or auto (auto-detect)
DEVICE=auto

# Specific GPU devices (comma-separated, e.g., "0,1")
CUDA_VISIBLE_DEVICES=0

# PyTorch CUDA memory configuration
PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True

# Disable tokenizer parallelism warnings
TOKENIZERS_PARALLELISM=false

# ===========================
# Data Paths
# ===========================
# Path to corpus file
CORPUS_PATH=data/processed/corpus.txt

# Path to QA pairs
QA_PATH=data/qa/qa.json

# Path to raw data directory
RAW_DATA_DIR=data/raw

# Path to save trained models
SAVE_DIR=saved_models_improved

# ===========================
# Training Configuration
# ===========================
# Supervised Fine-Tuning
SFT_EPOCHS=4
SFT_BATCH=1
SFT_LR=3e-5

# Discriminator Training
DISC_EPOCHS=4
DISC_BATCH=2  # Reduced from 8 to 2
DISC_LR=2e-5

# Reinforcement Learning
RL_EPOCHS=4
MC_ROLLOUTS=6
GEN_LR=1e-5

# ===========================
# Inference Configuration
# ===========================
# Maximum tokens to generate
MAX_GEN_TOKENS=64

# Minimum tokens to generate
MIN_GEN_TOKENS=10

# Number of documents to retrieve for RAG
TOP_K=3

# ===========================
# Frontend Configuration
# ===========================
# Frontend window dimensions
WINDOW_WIDTH=1400
WINDOW_HEIGHT=900

# Minimum window size
MIN_WIDTH=800
MIN_HEIGHT=600

# ===========================
# Logging Configuration
# ===========================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/ai4org.log
